{
    "name": "monster-manual",
    "version": "1.0.0",
    "description": "Angular2 experiment. An encyclopedia of cryptids, demons and mythological entities.",
    "main": "server/app.js",
    "private": true,
    "scripts": {
        "bundle:prod": "node tools/builder.js --prod",
        "forever": "tsc -p ./server && forever start ./server/bin/www --watch",
        "postinstall": "typings install && tsc -p ./server",
        "twc:client:w": "tsc -w -p ./client",
        "twc:server:w": "tsc -w -p ./server",
        "typings": "typings install",
        "watch": "mkdir -p dist/client dist/server && tsc -p ./client && tsc -p ./server && concurrently \"tsc -w -p ./server\" \"tsc -w -p ./client\" \"nodemon ./server/bin/www\" "
    },
    "engines": {
        "node": ">= 5.4.1"
    },
    "author": "Michael Matyi",
    "license": "MIT",
    "dependencies": {
        "@types/body-parser": "0.0.32",
        "@types/express": "^4.0.32",
        "@types/jsonwebtoken": "^7.1.31",
        "body-parser": "~1.13.2",
        "cookie-parser": "~1.3.5",
        "debug": "^2.2.0",
        "express": "^4.13.4",
        "express-jwt": "^3.3.0",
        "forever": "^0.15.2",
        "jsonwebtoken": "^5.7.0",
        "typescript": "^2.0.2",
        "typings": "^1.3.2"
    },
    "devDependencies": {
        "@angular/common": "2.0.0",
        "@angular/compiler": "2.0.0",
        "@angular/core": "2.0.0",
        "@angular/forms": "2.0.0",
        "@angular/http": "2.0.0",
        "@angular/platform-browser": "2.0.0",
        "@angular/platform-browser-dynamic": "2.0.0",
        "@angular/router": "3.0.0",
        "@angular/upgrade": "2.0.0",
        "core-js": "^2.4.1",
        "reflect-metadata": "^0.1.3",
        "rxjs": "5.0.0-beta.12",
        "systemjs": "0.19.27",
        "zone.js": "^0.6.23",
        "angular2-in-memory-web-api": "0.0.20",
        "@types/core-js": "^0.9.32",
        "@types/jasmine": "^2.2.33",
        "angular2-jwt": "^0.1.22",
        "concurrently": "^2.2.0",
        "ng-semantic": "^1.1.3",
        "nodemon": "^1.9.1",
        "systemjs-builder": "^0.15.26",
        "yargs": "^4.8.1"
    }
}
